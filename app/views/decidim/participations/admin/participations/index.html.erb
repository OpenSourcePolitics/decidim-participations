<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".title") %>

      <div class="button--title">

        <% if can? :create, Decidim::Participations::Participation %>
          <%= link_to t("actions.new", scope: "decidim.participations", name: t("models.participation.name", scope: "decidim.participations.admin")), new_participation_path, class: 'button tiny button--simple' if can? :manage, current_feature %>
        <% end %>

        <%= export_dropdown %>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="table-scroll">
      <table class="table-list">
        <thead>
          <tr>
            <th>
              <%= sort_link(query, :id, t("models.participation.fields.id", scope: "decidim.participations"), default_order: :desc ) %>
            </th>
            <th>
              <%= sort_link(query, :title, t("models.participation.fields.title", scope: "decidim.participations") ) %>
            </th>
            <th>
              <%= sort_link(query, :category_name, t("models.participation.fields.category", scope: "decidim.participations") ) %>
            </th>

            <% if scopes_enabled?(current_participatory_space) %>
              <th>
                <%= sort_link(query, :scope_name, t("models.participation.fields.scope", scope: "decidim.participations") ) %>
              </th>
            <% end %>

            <th>
              <%= sort_link(query, :state, t("models.participation.fields.state", scope: "decidim.participations") ) %>
            </th>

            <% if current_settings.votes_enabled? %>
              <th>
                <%= sort_link(query, :participation_votes_count, t("models.participation.fields.votes", scope: "decidim.participations") ) %>
              </th>
            <% end %>

            <% if current_feature.settings.comments_enabled? and !current_settings.comments_blocked? %>
              <th>
                <%= sort_link(query, :commentable_comments_count, t("models.participation.fields.comments", scope: "decidim.participations") ) %>
              </th>
            <% end %>

            <th>
              <%= sort_link(query, :created_at, t("models.participation.fields.created_at", scope: "decidim.participations") ) %>
            </th>

            <th class="actions"><%= t("actions.title", scope: "decidim.participations") %></th>
          </tr>
        </thead>
        <tbody>
          <% participations.each do |participation| %>
            <tr data-id="<%= participation.id %>">
              <td>
                <%= participation.id %><br />
              </td>
              <td>
                <%= participation.title %><br />
              </td>
              <td>
                <% if participation.category %>
                  <%= translated_attribute participation.category.name %>
                <% end %>
              </td>
              <% if scopes_enabled?(current_participatory_space) %>
                <td>
                  <% if participation.scope %>
                    <%= translated_attribute participation.scope.name %>
                  <% else %>
                    <%= t("decidim.scopes.global") %>
                  <% end %>
                </td>
              <% end %>
              <td>
                <strong class="<%= participation_state_css_class participation.state %>">
                  <%= humanize_participation_state participation.state %>
                </strong>
              </td>

              <% if current_settings.votes_enabled? %>
                <td>
                  <%= participation.participation_votes_count %>
                </td>
              <% end %>

              <% if current_feature.settings.comments_enabled? and !current_settings.comments_blocked? %>
                <td>
                  <%= participation.comments.count %>
                </td>
              <% end %>

              <td>
                <%= l participation.created_at, format: :decidim_short %>
              </td>

              <td class="table-list__actions">
                <% if can? :update, participation %>
                  <%= icon_link_to "chat", edit_participation_participation_answer_path(participation_id: participation.id, id: participation.id), t("actions.answer", scope: "decidim.participations"), class: "action-icon--edit-answer" %>
                <% end %>
                <%= icon_link_to "eye", resource_locator(participation).path, t("actions.preview", scope: "decidim.participations.admin"), class: "action-icon--preview", target: :blank %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <%= paginate participations, theme: "decidim" %>
    </div>
  </div>
</div>
