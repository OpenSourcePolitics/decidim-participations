<div class="column">
  <article class="card card--participation">
    <div class="card__content">
      <div class="card__header">
        <%= link_to participation do%>
          <h5 class="card__title"><%= participation.title %></h5>
        <% end %>
        <div class="card__author author-data author-data--small">
          <%= render partial: "decidim/shared/author_reference", locals: { author: present(participation).author } %>
        </div>
        <div class="tech-info tech-info--text-left">
          <%= t(".creation_date", date: l(participation.created_at, format: :decidim_short)) %>
        </div>
        <%= feature_reference(participation, class: "tech-info--text-left") %>
      </div>
      <%= render partial: "participation_badge", locals: { participation: participation } %>
      <p><%= truncate(participation.body, length: 100) %></p>
      <%= render partial: "decidim/shared/tags", locals: { resource: participation, tags_class_extra: "tags--participation" } %>
    </div>
    <div class="card__footer">
      <div class="card__support">
        <% if current_settings.votes_enabled? %>
          <%= render partial: "votes_count", locals: { participation: participation, from_participations_list: true } %>
          <%= render partial: "vote_button", locals: { participation: participation, from_participations_list: true } %>
        <% else %>
          <div class="card__support__data"></div>
          <%= link_to t(".view_participation"), participation, class: "card__button button small secondary" %>
        <% end %>
      </div>
    </div>
  </article>
</div>
