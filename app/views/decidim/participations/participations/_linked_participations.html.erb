<div class="card card--action card--list">
  <% resources.each do |participation| %>
    <div class="card--list__item">
      <div class="card--list__text">
        <%= link_to resource_locator(participation).path do %>
          <%= icon "participations", class: "card--list__icon", remove_icon_class: true %>
        <% end %>
        <div>
          <%= link_to resource_locator(participation).path, class: "card__link" do %>
            <h5 class="card--list__heading"><%= participation.title %></h5>
          <% end %>
          <% present(participation) do |participation| %>
            <div class="author">
              <span class="author__avatar">
                <%= image_tag participation.author.avatar_url %>
              </span>
              <span class="author__name">
                <strong><%= participation.author.name %></strong>
                <%= participation.author.nickname %>
              </span>
            </div>
          <% end %>
        </div>
      </div>
      <div class="card--list__data">
        <span class="card--list__data__number">
          <%= participation.votes.size %>
        </span> <%= t(".participation_votes", count: participation.votes.size) %>
      </div>
    </div>
  <% end %>
</div>
